.user-info {
    text-align: center;

    @include desktop {
        display: flex;
    }

    @include tablets {
        flex-direction: column;
    }
}
.user-info__desc {
    opacity: .4;
    font-weight: 600;
    font-size: 18px;
    line-height: 1.8;

    @include desktop {
        margin-right: 60px;
        text-align: end;
        line-height: 30px;
    }

    @include tablets {
        margin-right: 0;
        text-align: center;
        margin-bottom: 30px;
    }
}

.user-info__username {
    font-size: 72px;
    font-weight: 800;
    line-height: 60px;

    @include desktop {
        text-align: start;
    }

    @include tablets {
        text-align: center;
        font-size: 48px;
    }
}