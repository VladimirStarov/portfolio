.user {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user__avatar {
    margin-bottom: 20px;
}

.user__desc {
    width: 280px;
}

.user__desc-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30px;
    font-weight: 600;
}

.user__key {
    opacity: .3;
}

.user__value {
    width: 108px;
}