script(type="text/x-template")#slider-container
    .works__content
        display(
            :works="works"
            :current-work="currentWork"
            :current-index="currentIndex"
            @slide="handleSlide"
        )
        info(
            :current-work="currentWork"
        )

script(type="text/x-template")#slider-display
    .works__left
        .works__slider.slider
            .slider__preview
                img(:src="currentWork.photo" alt="").slider__fillpic
            thumbs(
                :works="works"
                :current-work="currentWork"
            )
            btns(
                @slide="$emit('slide', $event)"
            )
            .slider__number {{currentIndex + 1}}

script(type="text/x-template")#slider-btns
    .slider__controls
        ul.controls
            li.controls__item
                button(@click.prevent="$emit('slide', 'up')").controls__button
                    +icon('arrow-down', 'works-controls__arrow-down controls__arrow-down--up' )
            li.controls__item
                button(@click.prevent="$emit('slide', 'down')").controls__button
                    +icon('arrow-down', 'works-controls__arrow-down controls__arrow-down--down')

script(type="text/x-template")#slider-thumbs
    .slider__thumbnails.thumbnalist
        ul.thumbnails__list
            li.thumbnails__item(
                v-for="work in reversedWorks"
                :key="work.id"
                :class="{thumbnails__item_active: work.id == currentWork.id}"
            )
                a.thumbnails__link
                    img(:src="work.photo" alt="").thumbnails__icon
            

script(type="text/x-template")#slider-info
    .works__right
        tags(
            :tags="tagsArray"
        )
        .works__text
            h3.works__subtitle {{currentWork.title}}
        .works__desc-text
            p {{currentWork.desc}}
        a(:href="currentWork.link").iconed-link
            +icon("link", "iconed-link__icon")
            span.iconed-link__text Посмотреть сайт

script(type="text/x-template")#slider-tags
    .works__tags
        ul.tags
            li(v-for="tag in tags" :key="tag").tags__item
                .tag {{tag}} 