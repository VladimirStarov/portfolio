include ./mixins.pug
include ./blocks/socials
include ./blocks/burger
include ./blocks/user-info
include ./blocks/scroll
include ./blocks/about-user
include ./blocks/triangles
include ./blocks/button
include ./blocks/form-elements

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper

      .welcome
        .parallax
          .parallax__layer(data-speed="0.1")
            +image('parallax/mountains/1.jpg', 'parallax__image')
          .parallax__layer(data-speed="0.13")
            +image('parallax/mountains/2.png', 'parallax__image')
          .parallax__layer(data-speed="0.2")
            +image('parallax/mountains/3.png', 'parallax__image')
          .parallax__layer(data-speed="0.18")
            +image('parallax/mountains/4.png', 'parallax__image')
          .parallax__layer(data-speed="0.23")
            +image('parallax/mountains/5.png', 'parallax__image')
          .parallax__layer(data-speed="0.25")
            +image('parallax/mountains/6.png', 'parallax__image')
          .parallax__layer(data-speed="0.28")
            +image('parallax/mountains/7.png', 'parallax__image')
        
        section.home#home
          header.header
            .container.header__container
              .header__logo: .logo вc
              .header__menu: vc-menu(modifier="header")
              .header__socials_and_burger
                .header__socials
                  - var icons = ['insta', 'vk', 'github']
                      ul.socials__list
                        each item in icons
                          li.socials__item
                            a(href="#" target="_blank").socials__link
                              +icon(`${item}`, 'socials__icon')

                .header__burger: +burger

          .fullscreen-section.hero
            .container
              .hero__content: +user_info('h1')
              .hero__scroll: +scroll

        section.about__section#about
          .container.about__container
            .about
              .about__user-info: +about_user
              .about__user-greeting
                h2.about__prolog Привет, меня зовут
                .title.about__title  Владимир Старов
                .about__text Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

      +triangles
      
      .values#skills
        .container.values__container
          .values__content
            .values__header
              h2.title.values__title Чем я могу быть полезен вам
              p.values__description Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            .values__skills#skills-list
              vc-skills

      section.works#works
        .container.works__container
          h2.title.works__title Мои работы
          .works__wrapper
            .works__slider
              vc-works-slider
            .works__content
              .works__tags
                vc-tags
              vc-work

      +triangles("buddha")

      .testimonial

        .parallax.parallax-budda
          .parallax-budda__layer(data-speed="0.1")
            +image('parallax/buddha/1.jpg', 'parallax-budda__image')
          .parallax-budda__layer(data-speed="0.14")
            +image('parallax/buddha/2.png', 'parallax-budda__image')
          .parallax-budda__layer(data-speed="0.16")
            +image('parallax/buddha/3.png', 'parallax-budda__image')
          .parallax-budda__layer(data-speed="0.2")
            +image('parallax/buddha/4.png', 'parallax-budda__image')
          .parallax-budda__layer(data-speed="0.24")
            +image('parallax/buddha/5.png', 'parallax-budda__image')
          .parallax-budda__layer(data-speed="0.26")
            +image('parallax/buddha/6.png', 'parallax-budda__image')

        section.reviews#reviews
          .container.reviews__container
            .reviews__header
              h2.title.reviews__title Что обо мне говорят
              .reviews__controls
                ul.controls.controls--reviews
                  li(@click="prev").controls__item
                    button(type='button', class=`btn btn--reviews`, :disabled="activePage === 0")
                  li(@click="next").controls__item
                    button(type='button', class=`btn btn--reviews`, :disabled="activePage === pages")
            .reviews__carousel: vc-reviews-carousel

        section.feedback#feedback
          .container.feedback__container
            h2.title.feedback__title Связаться со мной
            form.feedback__form
              .feedback__double-block-wrapper
                .feedback__single-wrapper
                  +input-block('feedback', 'Введите ваше имя', 'user', 'text', 'name', 'Ковальчук Дмитрий')
                .feedback__single-wrapper
                  +input-block('feedback', 'Введите ваш email', 'envelope', 'email', 'email', 'loftschool@study.com')
              .feedback__single-wrapper
                +textarea-block('feedback', 'Сообщение к письму', 'message', 'message', 'Требуется ваша помощь в создании сайта.\n' +
                'Интересуют сроки и цена вопроса')
              .feedback__button
                +button('feedback', 'submit', 'Отправить')

      footer.footer
        .container.footer__container
          .footer__copyright-and-author
            .footer__copyright © 2019
            .footer__author: +user_info('footer')
          .footer__navigation-and-content
            .footer__navigation: vc-menu(modifier="footer")
            .footer__content
              .footer__about-and-socials
                .footer__about: p Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                .footer__socials: +socials('footer')
              .footer__quote
                .footer-quote
                  .footer-quote__content
                    p Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                  .footer-quote__author Martin Golding
      include ./components/entry

    .popup-menu
      .popup-menu__sidebar
        .popup-menu__container
          vc-menu(modifier="popup")
          +socials('popup')